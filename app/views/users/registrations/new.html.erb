<div class="container mt-5" style="max-width: 400px;">
  <h2 class="text-center mb-4">アカウントを作成する</h2>

  <div class="card shadow-sm p-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前 -->
      <div class="form-group mb-3">
        <label for="name" class="form-label">氏名</label>
        <%= f.text_field :name,
                          autofocus: true,
                          class: "form-control",
                          id: "name" %>
      </div>

      <!-- メールアドレス -->
      <div class="form-group mb-3">
        <label for="email" class="form-label">メールアドレス</label>
        <%= f.email_field :email,
                           autofocus: true,
                           autocomplete: "email",
                           class: "form-control",
                           id: "email" %>
      </div>

      <!-- パスワード -->
      <div class="form-group mb-3">
        <label for="password" class="form-label">パスワード</label>
        <% if @minimum_password_length %>
          <small class="text-muted">(<%= @minimum_password_length %>文字以上必要です)</small>
        <% end %>
        <%= f.password_field :password,
                              autocomplete: "new-password",
                              class: "form-control",
                              id: "password" %>
      </div>

      <!-- パスワード確認 -->
      <div class="form-group mb-3">
        <label for="password_confirmation" class="form-label">もう一度パスワードを入力してください</label>
        <%= f.password_field :password_confirmation,
                              autocomplete: "new-password",
                              class: "form-control",
                              id: "password_confirmation" %>
      </div>

      <!-- 登録ボタン -->
      <div class="d-grid">
        <%= f.submit "アカウントを作成する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <hr class="my-4">
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
