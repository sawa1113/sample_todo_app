<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4">アカウント情報更新</h2>

  <div class="card shadow-sm p-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
      <%= f.error_notification %>

      <!-- 名前 -->
      <div class="form-group mb-3">
        <label for="name" class="form-label">ユーザーフルネーム</label>
        <%= f.input :name,
                    required: true,
                    input_html: { class: "form-control", id: "name" },
                    label: false %>
      </div>

      <!-- メールアドレス -->
      <div class="form-group mb-3">
        <label for="email" class="form-label">メールアドレス</label>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: "form-control", id: "email" },
                    label: false %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="text-muted small">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <!-- パスワード -->
      <div class="form-group mb-3">
        <label for="password" class="form-label">新しいパスワード</label>
        <small class="text-muted">(変更しない場合は空白のままにしてください)</small>
        <%= f.input :password,
                    required: false,
                    input_html: { class: "form-control", autocomplete: "new-password", id: "password" },
                    label: false %>
      </div>

      <!-- パスワード確認 -->
      <div class="form-group mb-3">
        <label for="password_confirmation" class="form-label">新しいパスワードの確認</label>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { class: "form-control", autocomplete: "new-password", id: "password_confirmation" },
                    label: false %>
      </div>

      <!-- 現在のパスワード -->
      <div class="form-group mb-3">
        <label for="current_password" class="form-label">現在のパスワード</label>
        <small class="text-muted">(変更を確認するには現在のパスワードが必要です)</small>
        <%= f.input :current_password,
                    required: true,
                    input_html: { class: "form-control", autocomplete: "current-password", id: "current_password" },
                    label: false %>
      </div>

      <!-- 更新ボタン -->
      <div class="d-grid">
        <%= f.button :submit, "更新する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <h3 class="text-danger">アカウントをキャンセルする</h3>
    <p class="text-muted">ご満足いただけませんか? 以下の方法でアカウントをキャンセルできます::</p>
    <%= button_to "アカウントをキャンセルする", registration_path(resource_name),
                   data: { confirm: "Are you sure you want to cancel your account?", turbo_confirm: "Are you sure?" },
                   method: :delete,
                   class: "btn btn-danger btn-sm" %>
  </div>

  <div class="mt-3">
    <%= link_to "プロフィールへ戻る", :back, class: "btn btn-link" %>
  </div>
</div>
