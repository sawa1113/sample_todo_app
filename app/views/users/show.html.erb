<div class="container mt-5" style="max-width: 600px;">
  <h1 class="text-center mb-4">ユーザープロフィール</h1>

  <!-- ユーザープロフィールカード -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="card-title text-primary mb-4">ユーザー情報</h3>

      <!-- ユーザー名 -->
      <div class="mb-3">
        <h5 class="fw-bold">ユーザー名</h5>
        <p class="text-muted"><%= @user.name %></p>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3">
        <h5 class="fw-bold">メールアドレス</h5>
        <p class="text-muted"><%= @user.email %></p>
      </div>

      <!-- プロフィール -->
      <div class="mb-3">
        <h5 class="fw-bold">プロフィール</h5>
        <p class="text-muted"><%= @user.profile.presence || "No profile provided." %></p>
      </div>

      <!-- 編集ボタン -->
      <div class="d-flex justify-content-start">
        <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-primary me-2" %>
        <%= link_to "ログアウト", destroy_user_session_path, 
                     method: :delete, 
                     data: { confirm: "Are you sure you want to log out?" }, 
                     class: "btn btn-danger me-2" %>
        <%= link_to "Todo画面へ", todos_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
